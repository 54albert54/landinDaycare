---
import LayoutContainer from "./LayoutContainer.astro";
export interface Props {
  className: string;
  id: string;
}

const { className, id } = Astro.props;
const allImg = [
  '../../public/img2.jpg',
,
]

---

<LayoutContainer id={id} className={className}>
<footer class="bg-mainColor/95 text-mainWhite rounded-t-2xl overflow-hidden">
  <div class="relative mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8 lg:pt-24">
    <div class="absolute end-4 top-4 sm:end-6 sm:top-6 lg:end-8 lg:top-8">
      <a
        class="inline-block rounded-full bg-callToAction p-2 text-white shadow transition hover:bg-importantText sm:p-3 lg:p-4"
        href="/"
      >
        <span class="sr-only">Back to top</span>

        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z"
