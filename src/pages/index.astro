---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Declaracion from '../components/Declaracion.astro';
import Matricula from '../components/Matricula.astro';
import Operaciones from '../components/Opereaciones.astro';
import Galeria from '../components/Galeria.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Welcome to Astro.">
<main>
	
	<Hero id='home' className='h-[400px] sm:h-[800px] '/>
	
	<Declaracion id='declaración' className='h-[840px] sm:h-auto  '/>
	<Matricula id='matricula' className='h-auto  mt-72 sm:mt-0 bg-mainColor/20 rounded-3xl'/>	
	<Operaciones id='operaciones' className='h-[400px] mb-10 pt-10 sm:px-0 px-6'/>
	<Galeria id='galería' className='h-auto  pt-10 sm:px-0 px-6'/>
	<Footer id='footer' className=' mt-10  '/>
</main>
</Layout>

